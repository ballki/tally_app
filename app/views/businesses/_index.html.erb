
<h2>All businesses</h2>
<div class="row mb"><%= link_to 'New Business', new_business_registration_path,class: "btn btn-primary btn-medium pull-right m15" %></div>
<div class="row">
<div class="col-lg-12">
<table class="table table-condensed table-bordered table-striped">
  <thead>
    <tr>
          <th>ID</th>
      <th>Name</th>
      <th>Email</th>
      <th>Street address</th>
      <th>Phone</th>
      <th>Manager</th>
      <th>Reward</th>
      <th>Customers</th>
      <th>Visits</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @businesses.each do |business| %>
      <tr>
        <td><%= business.id %></td>
        <td><%= business.name %></td>
        <td><%= business.email %></td>
        <td><%= business.street_address %></td>
        <td><%= business.phone %></td>
        <td><%= business.manager %></td>
        <td><%= business.reward %></td>
        <td><%= Visit.where(:business_id => business.id).distinct.count('customer_id') %></td>
        <td><%= Visit.where(:business_id => business.id).count %></td>
        <td><%= link_to 'Show', business %> |
        <%= link_to 'Edit', edit_business_path(business) %> |
        <%= link_to 'Destroy', business, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
