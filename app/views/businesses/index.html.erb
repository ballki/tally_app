<h1>All businesses</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Logo</th>
      <th>Email</th>
      <th>Street address</th>
      <th>Phone</th>
      <th>Manager</th>
      <th>Reward</th>
      <th>Req visits</th>
      <th>Marketing package</th>
      <th>Photo</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @businesses.each do |business| %>
      <tr>
        <td><%= business.name %></td>
        <td><%= business.logo %></td>
        <td><%= business.email %></td>
        <td><%= business.street_address %></td>
        <td><%= business.phone %></td>
        <td><%= business.manager %></td>
        <td><%= business.reward %></td>
        <td><%= business.req_visits %></td>
        <td><%= business.marketing_package %></td>
        <td><%= business.photo %></td>
        <td><%= link_to 'Show', business %></td>
        <td><%= link_to 'Edit', edit_business_path(business) %></td>
        <td><%= link_to 'Destroy', business, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

