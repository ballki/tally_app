            </div>
            <div class="bar">
              <div class="title">Today</div>
              <div class="value tooltips" data-original-title="<%= @todaycount %> visits" data-toggle="tooltip" data-placement="top"><%= @todaycount %></div>
            </div>
          </div>

          <canvas id="myChart" style="width:100%" height="400"></canvas>

        </div>
</div>

<script>  

  topVal = nextL(<%= @l_value %>)
  // marking our y axis...
  $('span.tm6').html(noDecimals(topVal/5*5));
  $('span.tm5').html(noDecimals(topVal/5*4));
  $('span.tm4').html(noDecimals(topVal/5*3));
  $('span.tm3').html(noDecimals(topVal/5*2));
  $('span.tm2').html(noDecimals(topVal/5*1));
  $('span.tm1').html(0);
 
  if ($(".custom-bar-chart")) {
    $(".bar").each(function () {
      var i = $(this).find(".value").html();
      $(this).find(".value").html("");
      $(this).find(".value").animate({
        height: 289*i/topVal
      }, 2000)

    })
  }
  // tool tips

  $('.tooltips').tooltip();

  // popovers
  $('.popovers').popover();

  //Get the context of the canvas element we want to select
var ctx = document.getElementById("myChart").getContext("2d");

var data = {
  labels : [
    "<%= @tm6.strftime("%a") %>",
    "<%= @tm5.strftime("%a") %>",
    "<%= @tm4.strftime("%a") %>",
    "<%= @tm3.strftime("%a") %>",
    "<%= @tm2.strftime("%a") %>",
    "<%= @tm1.strftime("%a") %>",
    "Today"
  ],
  datasets : [
    {
      // fillColor : "rgba(220,220,220,0.5)",
      fillColor : "#ed6639",
      strokeColor : "rgba(220,220,220,1)",
      data : [
          <%= @tm6count %>,
          <%= @tm5count %>,
          <%= @tm4count %>,
          <%= @tm3count %>,
          <%= @tm2count %>,
          <%= @tm1count %>,
          <%= @todaycount %>,
        ]
    },
    // {
    //   fillColor : "rgba(151,187,205,0.5)",
    //   strokeColor : "rgba(151,187,205,1)",
    //   data : [28,48,40,19,96,27,100]
    // }
  ]
}
var options = {
    //Boolean - Whether to animate the chart
  animation : true,

  //Number - Number of animation steps
  animationSteps : 10,
}

var myNewChart = new Chart(ctx).Bar(data,options);


</script>

