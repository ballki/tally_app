<!DOCTYPE html>
<html>
<head>
  <title>TallyApp2</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <% javascript_include_tag "dashio_theme/advanced-datatable/media/src/DataTables.js", "data-turbolinks-track" => true %>
    <% javascript_include_tag "dashio_theme/chart-master/Chart.js", "data-turbolinks-track" => true %>
    <% javascript_include_tag "dashio_theme/common-scripts.js", "data-turbolinks-track" => true %>      
  <%= csrf_meta_tags %>

  <%= render 'layouts/shim' %>

</head>
<body>
    <section id="container">

                <% if business_signed_in? || admin_signed_in? %>
                  <%= render 'layouts/header' %>
                   <%= render 'layouts/sidebar' %>

    <section id="main-content">
      <section class="wrapper">
         <% if notice %>
            <div class="alert alert-notice">
            <%= notice.html_safe %>
            </div>
          <% end %>
          <% if alert %>
            <p class="alert alert-error"><%= alert %></p>
          <% end %>
          <% end %>

          <%= yield %>
         <% if business_signed_in? %>
        <%= render 'layouts/rightsidebar' %>
          <% end %>


          </section>
        </section>
        </section>
                <% if business_signed_in? || admin_signed_in? %>

          <%= render 'layouts/footer' %>
       <% end %>
</body>
</html>


